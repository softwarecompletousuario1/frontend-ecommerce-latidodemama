---
import '../../styles/home_slider_1.css';
import { Image } from '@astrojs/image/components';
const categoryList = [
    {
        img_category: 'https://res.cloudinary.com/dk2abyon6/image/upload/v1699385777/Categorias/Dise%C3%B1o_sin_t%C3%ADtulo_10_frfy2f.png',
        name_category: 'Cursos',
        quantity_category: '5'
    },
    {
        img_category: 'https://res.cloudinary.com/dk2abyon6/image/upload/v1699386085/Categorias/Dise%C3%B1o_sin_t%C3%ADtulo_11_u47iin.png',
        name_category: 'Servicios',
        quantity_category: '1'
    },
    {
        img_category: 'https://res.cloudinary.com/dk2abyon6/image/upload/v1699386130/Categorias/Dise%C3%B1o_sin_t%C3%ADtulo_12_lgocf4.png',
        name_category: 'Contenido',
        quantity_category: '1'
    },
    
]
---
<div class="content_slider_1_cateogries_title">
    NUESTRAS CATEGORIAS
</div>
<div class="content_slider_1_cateogries_content_divs">
    {
        categoryList ? categoryList.map((item) => (
            <div class="div_category">
                <div class="div_img_category">
                    <Image class="div_img_category" src={item.img_category} alt="descriptive text" 
            width={300} height={300} format={"webp"} loading="eager" decoding="auto"/>
                </div>
                <br/>
                <div class="title_category">
                    {item.name_category}
                </div>
                <div class="cantidad_category">
                    Cantidad {item.quantity_category}    
                </div>
            </div>
        )) : <></>
    }
    
</div>